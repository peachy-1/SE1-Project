<p-create>
    <a asp-action="Create">Create New</a>
</p-create>


<form asp-controller="Professionals" asp-action="Index" method="get">
    <br />
    <p>
        Name: <input type="text" asp-for="searchString" />
        Profession: <select asp-for="professionalProfession" asp-items="Model.professions">
            <option value="">All</option>
        </select>
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Professionals[0].fName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Professionals[0].lName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Professionals[0].streetAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Professionals[0].city)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Professionals[0].state)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Professionals[0].phoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Professionals[0].email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Professionals[0].profession)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Professionals[0].rate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Professionals[0].averageRating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Professionals[0].company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Professionals[0].image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Professionals)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.fName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.lName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.streetAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.city)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.state)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.phoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.profession)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.rate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.averageRating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.company)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.image)
                </td>
                <td>

                    <a asp-action="Edit" asp-route-id="@item.Id"><button class="btn"><i class="far fa-edit"></i></button></a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id"><button class="btn"><i class="fa fa-trash"></i></button></a>
                </td>
            </tr>
        }
    </tbody>
</table>
